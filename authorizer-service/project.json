{
  "name": "authorizer-service",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "authorizer-service/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "authorizer-service/jest.config.ts"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "authorizer-service",
        "command": "bun build --entrypoints ./src/index.ts --outdir ../dist/authorizer-service --target node --minify && cp package.json ../dist/authorizer-service/package.json"
      }
    }
  },
  "tags": []
}
