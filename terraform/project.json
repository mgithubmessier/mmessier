{
  "name": "terraform",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "terraform/src",
  "projectType": "library",
  "targets": {
    "apply": {
      "dependsOn": [
        {
          "projects": [
            "authentication-service",
            "experience-service",
            "authorizer-service",
            "contact-service"
          ],
          "target": "build"
        }
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "terraform/src",
        "command": "terraform apply"
      }
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "terraform/src",
        "command": "terraform destroy"
      }
    },
    "init": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "terraform/src",
        "command": "terraform init"
      }
    }
  },
  "tags": []
}
