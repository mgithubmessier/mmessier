{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mmessier/authentication-service": [
        "authentication-service/src/index.ts"
      ],
      "@mmessier/authorizer-service": ["authorizer-service/src/index.ts"],
      "@mmessier/contact-service": ["contact-service/src/index.ts"],
      "@mmessier/experience-service": ["experience-service/src/index.ts"],
      "@mmessier/types": ["types/src/index.ts"],
      "@mmessier/use-query-parameters": ["use-query-parameters/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
